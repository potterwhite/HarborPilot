# =============================================================================
# Base Configuration
# =============================================================================
PRODUCT_NAME="rv1126"
IMAGE_NAME="${PRODUCT_NAME}-dev-env"
LATEST_IMAGE_TAG=${PROJECT_VERSION}
CONTAINER_NAME=${PRODUCT_NAME}
DEV_USERNAME="developer"
DEV_GROUP="developer"
DEV_USER_PASSWORD="123"
DEV_USER_ROOT_PASSWORD="123"
DEV_UID="1000"
DEV_GID="1000"
TIMEZONE="Asia/Hong_Kong"
DEBIAN_FRONTEND="noninteractive"

# =============================================================================
# Build Configuration
# =============================================================================
DOCKER_BUILDKIT="1"

# =============================================================================
# Development Tools Configuration
# =============================================================================
INSTALL_CUDA="false"
INSTALL_OPENCV="false"
INSTALL_HOST_CMAKE="true"
INSTALL_MAN_DOC="true"
INSTALL_DISTCC="false"
NPM_USE_CHINA_MIRROR="true"
# Tool versions
CONAN_VERSION=2.0.17
CMAKE_FORMAT_VERSION=0.6.13
PRE_COMMIT_VERSION=3.5.0
CUDA_VERSION=12.0
OPENCV_VERSION=4.9.0

# Installation flags
INSTALL_TOOLCHAIN="false"
# Offline packages configuration (离线包配置)
# Comment out to disable installation (注释掉以禁用安装)
GCC_OFFLINE_PACKAGE="gcc-arm-10.3-2021.07-x86_64-aarch64-none-linux-gnu.tar.gz" # the filename of the offline package(the path is not needed)
GCC_OFFLINE_VERSION="10.3.0"
GCC_INSTALL_PATH="/usr/local"


# =============================================================================
# Workspace Configuration
# =============================================================================
# 1st. Workspace paths
WORKSPACE_ROOT="/development"
# 2nd. Workspace source directory
WORKSPACE_1ST_SOURCE_SUBDIR="${WORKSPACE_ROOT}/i_src"
# 3rd. Workspace build directory
WORKSPACE_2ND_BUILD_SUBDIR="${WORKSPACE_ROOT}/ii_build"
# 4th. Workspace logs directory
WORKSPACE_3RD_LOGS_SUBDIR="${WORKSPACE_ROOT}/iii_logs"
# 5th. Workspace temp directory
WORKSPACE_4TH_TEMP_SUBDIR="${WORKSPACE_ROOT}/iv_temp"
# 6th. Workspace docs directory
WORKSPACE_5TH_DOCS_SUBDIR="${WORKSPACE_ROOT}/v_docs"
# 7th. Workspace tools directory
WORKSPACE_6TH_TOOLS_SUBDIR="${WORKSPACE_ROOT}/vi_tools"
# 8th. Workspace default project name
WORKSPACE_DEFAULT_PROJECT_NAME="embedded_project"
# 9th. Workspace default build type
WORKSPACE_DEFAULT_BUILD_TYPE="Debug"
# 10th. Workspace build threads
WORKSPACE_BUILD_THREADS="4"
# 11th. Workspace enable auto save
WORKSPACE_ENABLE_AUTO_SAVE="true"
# 12th. Workspace enable error reporting
WORKSPACE_ENABLE_ERROR_REPORTING="true"
# 13th. Workspace log level
WORKSPACE_LOG_LEVEL="INFO"
# 14th. Workspace enable VSCode integration
WORKSPACE_ENABLE_VSC_INTEGRATION="false"
# 15th. Workspace enable remote debug
WORKSPACE_ENABLE_REMOTE_DEBUG="true"
# 16th. Workspace debug port
WORKSPACE_DEBUG_PORT="3000"

# =============================================================================
# Registry Configuration
# =============================================================================
HAVE_GITLAB_SERVER="TRUE"
UBUNTU_SERVER_IP="192.168.3.67"
UBUNTU_SERVER_PORT="9000"
HAVE_HARBOR_SERVER="TRUE"
REGISTRY_URL="${UBUNTU_SERVER_IP}:${UBUNTU_SERVER_PORT}/team_${CONTAINER_NAME}"

# =============================================================================
# SDK Configuration
# =============================================================================
INSTALL_SDK="false"
SDK_INSTALL_PATH="${WORKSPACE_ROOT}/sdk"
SDK_GIT_REPO="git@${UBUNTU_SERVER_IP}:team_${CONTAINER_NAME}/${CONTAINER_NAME}_sdk.git"
SDK_GIT_KEY_FILE="SDK_${CONTAINER_NAME}_ED25519"
SDK_GIT_DEFAULT_BRANCH="main"

# =============================================================================
# Docker Volumes Configuration
# =============================================================================
VOLUMES_ROOT="${WORKSPACE_ROOT}"
#
# ${HOST_VOLUME_DIR} is the host directory that will be mounted to the container.
#
HOST_VOLUME_DIR="/mnt/2tb_wd_purpleSurveillance_hdd/system-redirection/Development/docker/volumes/rv1126"


# =============================================================================
# Samba Configuration
# =============================================================================
SAMBA_PUBLIC_ACCOUNT_NAME="sambashare"
SAMBA_PUBLIC_ACCOUNT_PASSWORD="sambashare"

SAMBA_PRIVATE_ACCOUNT_NAME="sambaadmin"
SAMBA_PRIVATE_ACCOUNT_PASSWORD=""

ENABLE_VSC_INTEGRATION="false"
# =============================================================================
# Container Runtime Configuration
# =============================================================================
# 1st. Container runtime enable SSH
ENABLE_SSH="true"
# 2nd. Container runtime SSH port
CLIENT_SSH_PORT="2139"
# 3rd. Container runtime SSH port
SERVER_SSH_PORT="2140"
# 4th. Container runtime enable syslog
ENABLE_SYSLOG="true"
# 5th. Container runtime enable GDB server
ENABLE_GDB_SERVER="true"
# 6th. Container runtime GDB port
GDB_PORT="2375"
# 7th. Container runtime enable core dumps
ENABLE_CORE_DUMPS="true"
# 8th. Container runtime core pattern
CORE_PATTERN="${WORKSPACE_3RD_LOGS_SUBDIR}/core-%e-%p-%t"

# =============================================================================
# Serverside Image & Container Options(Obsoleted gonna)
# =============================================================================
ENABLE_SERVERSIDE="false"

DISTCC_GCC_11_ENABLE="true"
DISTCC_GCC_11_MAIN_PORT="3652"
DISTCC_GCC_11_STATS_PORT="3653"

DISTCC_GCC_10_ENABLE="true"
DISTCC_GCC_10_MAIN_PORT="3642"
DISTCC_GCC_10_STATS_PORT="3643"

DISTCC_LOG_LEVEL="debug"
DISTCC_LOG_DIR="${VOLUMES_ROOT}/log/distccd"

TOOLCHAIN_TARBALL_NAME="gcc-arm-10.3-2021.07-x86_64-aarch64-none-linux-gnu.tar.gz"
PYTHON_VERSION="3.10"
TOOLCHAIN_DIR="/opt/toolchains"
SERVERSIDE_IMAGE_NAME="${IMAGE_NAME}-serverside"
SERVERSIDE_CONTAINER_NAME="${CONTAINER_NAME}-serverside"


# =============================================================================
# Proxy Configuration
# =============================================================================
HAS_PROXY="true"
HTTP_PROXY_IP="http://192.168.3.68:7890"
HTTPS_PROXY_IP="http://192.168.3.68:7890"
