# =============================================================================
# Workspace Paths Configuration
# =============================================================================
WORKSPACE_ROOT="${WORKSPACE_ROOT}"
SOURCE_DIR="${WORKSPACE_1ST_SOURCE_SUBDIR}"
BUILD_DIR="${WORKSPACE_2ND_BUILD_SUBDIR}"
LOGS_DIR="${WORKSPACE_3RD_LOGS_SUBDIR}"
TEMP_DIR="${WORKSPACE_4TH_TEMP_SUBDIR}"
DEFAULT_USER="${DEV_USERNAME}"
USER_ID="${DEV_UID}"
GROUP_ID="${DEV_GID}"

# =============================================================================
# Project Settings
# =============================================================================
DEFAULT_PROJECT_NAME="${WORKSPACE_DEFAULT_PROJECT_NAME}"
DEFAULT_BUILD_TYPE="${WORKSPACE_DEFAULT_BUILD_TYPE}"
BUILD_THREADS=${WORKSPACE_BUILD_THREADS}

# =============================================================================
# Development Environment Settings
# =============================================================================
ENABLE_AUTO_SAVE=${WORKSPACE_ENABLE_AUTO_SAVE}
ENABLE_ERROR_REPORTING=${WORKSPACE_ENABLE_ERROR_REPORTING}
LOG_LEVEL="${WORKSPACE_LOG_LEVEL}"

# =============================================================================
# IDE Integration Settings
# =============================================================================
ENABLE_VSC_INTEGRATION=${WORKSPACE_ENABLE_VSC_INTEGRATION}
ENABLE_REMOTE_DEBUG=${WORKSPACE_ENABLE_REMOTE_DEBUG}
DEBUG_PORT=${WORKSPACE_DEBUG_PORT}

# =============================================================================
# Volumes Configuration
# =============================================================================
VOLUMES_ROOT="${VOLUMES_ROOT}"