# Embedded development environment configuration
export PATH=/usr/local/bin:$PATH

# ARM toolchain configuration
export ARM_TOOLCHAIN_PATH=/usr/bin
export PATH=$ARM_TOOLCHAIN_PATH:$PATH

# Set default editor
export EDITOR=vim

# Common aliases
alias ll='ls -la'
alias ..='cd ..'

# Set prompt
PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ ' 
