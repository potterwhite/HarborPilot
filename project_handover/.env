# =============================================================================
# Base Configuration
# =============================================================================
IMAGE_NAME=n8-dev-env
LATEST_IMAGE_TAG=stage5
CONTAINER_NAME=n8
DEV_USERNAME=developer
DEV_USER_PASSWORD=123
DEV_USER_ROOT_PASSWORD=123
DEV_UID=1000
DEV_GID=1000
DEV_GROUP=developer
# TIMEZONE=UTC
TIMEZONE=Asia/Shanghai
DEBIAN_FRONTEND=noninteractive

# =============================================================================
# Project Information
# =============================================================================
PROJECT_MAINTAINER="[MrJamesLZA]"
PROJECT_EMAIL="1811783168@qq.com"
PROJECT_COPYRIGHT="[Baytto Electronics Technology Co., Ltd.]"
PROJECT_LICENSE="MIT"
PROJECT_VERSION="0.3.0"

# =============================================================================
# Build Configuration
# =============================================================================
DOCKER_BUILDKIT=1

# =============================================================================
# Development Tools Configuration
# =============================================================================
INSTALL_CUDA=false
INSTALL_OPENCV=false


# =============================================================================
# Workspace Configuration
# =============================================================================
# 1st. Workspace paths
WORKSPACE_ROOT=/development
# 2nd. Workspace source directory
WORKSPACE_SOURCE_DIR=${WORKSPACE_ROOT}/src
# 3rd. Workspace build directory
WORKSPACE_BUILD_DIR=${WORKSPACE_ROOT}/build
# 4th. Workspace logs directory
WORKSPACE_LOGS_DIR=${WORKSPACE_ROOT}/logs
# 5th. Workspace temp directory
WORKSPACE_TEMP_DIR=${WORKSPACE_ROOT}/temp
# 6th. Workspace default project name
WORKSPACE_DEFAULT_PROJECT_NAME=embedded_project
# 7th. Workspace default build type
WORKSPACE_DEFAULT_BUILD_TYPE=Debug
# 8th. Workspace build threads
WORKSPACE_BUILD_THREADS=4
# 9th. Workspace enable auto save
WORKSPACE_ENABLE_AUTO_SAVE=true
# 10th. Workspace enable error reporting
WORKSPACE_ENABLE_ERROR_REPORTING=true
# 11th. Workspace log level
WORKSPACE_LOG_LEVEL=INFO
# 12th. Workspace enable VSCode integration
WORKSPACE_ENABLE_VSC_INTEGRATION=false
# 13th. Workspace enable remote debug
WORKSPACE_ENABLE_REMOTE_DEBUG=true
# 14th. Workspace debug port
WORKSPACE_DEBUG_PORT=3000

# =============================================================================
# SDK Configuration
# =============================================================================
# SDK_PACKAGE=rk3588s-linux_20240913.tar.xz
# SDK_VERSION=1.0
SDK_INSTALL_PATH=${WORKSPACE_ROOT}/sdk
# SDK_GIT_REPO=http://192.168.3.178:3000/n8/n8.git
SDK_GIT_REPO=git@192.168.3.178:team_n8/n8_sdk.git
SDK_GIT_KEY_FILE=SDK_${CONTAINER_NAME}_ED25519

# =============================================================================
# Docker Volumes Configuration
# =============================================================================
VOLUMES_ROOT=${WORKSPACE_ROOT}/docker_volumes

# =============================================================================
# Container Runtime Configuration
# =============================================================================
# 1st. Container runtime enable SSH
ENABLE_SSH=true
# 2nd. Container runtime SSH port
SSH_PORT=2109
# 3rd. Container runtime enable syslog
ENABLE_SYSLOG=true
# 4th. Container runtime enable GDB server
ENABLE_GDB_SERVER=true
# 5th. Container runtime GDB port
GDB_PORT=2345
# 6th. Container runtime enable core dumps
ENABLE_CORE_DUMPS=true
# 7th. Container runtime core pattern
CORE_PATTERN=${WORKSPACE_LOGS_DIR}/core-%e-%p-%t

